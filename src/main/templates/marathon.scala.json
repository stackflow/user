@(appId: String, javaToolOptions: String, jenkinsBuildId: Option[String], containerDockerImage: String, containerDockerPort: Int, uris: String)

{
  "id": "@appId",
  "cpus": 0.1,
  "mem": 256,
  "instances": 1,
  "labels": {
    "MARATHON_SINGLE_INSTANCE_APP": "true"
  },
  "constraints": [
    [
      "service",
      "CLUSTER",
      "true"
    ]
  ],
  "env": {
    "JAVA_TOOL_OPTIONS": "@javaToolOptions",
    "JENKINS_BUILD_NUMBER": "@{jenkinsBuildId.getOrElse("")}"
  },
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "@containerDockerImage",
      "network": "BRIDGE",
      "portMappings": [
        {
          "containerPort": @containerDockerPort,
          "hostPort": 0
        }
      ],
      "parameters": [
        {
          "key": "cpu-shares",
          "value": "0"
        }
      ],
      "forcePullImage": true
    }
  },
  "upgradeStrategy": {
    "minimumHealthCapacity": 0,
    "maximumOverCapacity": 0
  },
  "healthChecks": [
    {
      "protocol": "HTTP",
      "path": "/status",
      "portIndex": 0,
      "gracePeriodSeconds": 60,
      "intervalSeconds": 30,
      "timeoutSeconds": 5,
      "maxConsecutiveFailures": 3
    }
  ],
  "uris": [
    "@uris"
  ]
}
